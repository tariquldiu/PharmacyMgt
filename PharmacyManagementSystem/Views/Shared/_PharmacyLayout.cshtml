<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>
        Friends Pharma
    </title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="description" />
    <meta content="Mosaddek" name="author" />
    <link href="~/template/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/template/assets/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/template/assets/bootstrap/css/bootstrap-fileupload.css" rel="stylesheet" />
    <link href="~/template/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/template/css/style.css" rel="stylesheet" />
    <link href="~/template/css/style-responsive.css" rel="stylesheet" />
    <link href="~/template/css/style-default.css" rel="stylesheet" id="style_color" />
    <link href="~/template/assets/fullcalendar/fullcalendar/bootstrap-fullcalendar.css" rel="stylesheet" />
    <link href="~/template/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-cookies.js"></script>
    <script src="~/Scripts/alertify.js"></script>
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.css" rel="stylesheet" />
    <script src="~/template/js/jquery-1.8.3.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    @RenderSection("style", required: false)
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="fixed-top">
    <!-- BEGIN HEADER -->
    <div id="header" class="navbar navbar-inverse navbar-fixed-top">
        <!-- BEGIN TOP NAVIGATION BAR -->
        <div class="navbar-inner">
            <div class="container-fluid">
                <!--BEGIN SIDEBAR TOGGLE-->
                <div class="sidebar-toggle-box hidden-phone">
                    <div class="icon-reorder tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
                </div>
                <!--END SIDEBAR TOGGLE-->
                <!-- BEGIN LOGO -->
                <a class="brand" href="#">
                    <img src="~/template/img/logo.png" alt="Metro Lab" />
                </a>
                <!-- END LOGO -->
                <!-- BEGIN RESPONSIVE MENU TOGGLER -->
                <a class="btn btn-navbar collapsed" id="main_menu_trigger" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="arrow"></span>
                </a>
                <!-- END RESPONSIVE MENU TOGGLER -->
                <div id="top_menu" class="nav">
                    <h3 style="font-size: 25px;"><b>Friends Pharma</b></h3>
                </div>
                <!-- END  NOTIFICATION -->
                <div class="top-nav ">
                    <ul class="nav pull-right top-menu">

                        <!-- BEGIN USER LOGIN DROPDOWN -->
                        <li class="dropdown hidden-print">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <span class="username">@User.Identity.Name</span>
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu extended logout">
                                    <li><a href="/Users/Logout"><i class="icon-key"></i> Log Out</a></li>
                                </ul>
                            }

                        </li>
                        <!-- END USER LOGIN DROPDOWN -->
                    </ul>
                    <!-- END TOP NAVIGATION MENU -->
                </div>
            </div>
        </div>
        <!-- END TOP NAVIGATION BAR -->
    </div>
    <!-- END HEADER -->
    <!-- BEGIN CONTAINER -->
    <div id="container" class="row-fluid">
        <!-- BEGIN SIDEBAR -->
        <div class="sidebar-scroll">
            <div id="sidebar" class="nav-collapse collapse">

                <!-- BEGIN RESPONSIVE QUICK SEARCH FORM -->
                <div class="navbar-inverse">
                    <form class="navbar-search visible-phone">
                        <input type="text" class="search-query" placeholder="Search" />
                    </form>
                </div>
                <!-- END RESPONSIVE QUICK SEARCH FORM -->
                <!-- BEGIN SIDEBAR MENU -->
                <ul class="sidebar-menu">
                    <li class="sub-menu active">
                        <a class="" href="/Home/Index">
                            <i class="icon-dashboard"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a class="" href="/Products/Index">
                            <i class="icon-align-justify"></i>
                            <span>Product</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a class="" href="/Purchases/Index">
                            <i class="icon-reply"></i>
                            <span>Purchase</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a class="" href="/Costs/Index">
                            <i class="icon-money"></i>
                            <span>Cost</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a class="" href="/Sales/Index">
                            <i class="icon-share-alt"></i>
                            <span>Sale</span>
                        </a>
                    </li>

                </ul>
                <!-- END SIDEBAR MENU -->
            </div>
        </div>
        <!-- END SIDEBAR -->
        <!-- BEGIN PAGE -->
        <div id="main-content">
            <!-- BEGIN PAGE CONTAINER-->
            <div class="container-fluid">
                <!-- BEGIN PAGE HEADER-->
                <div class="row-fluid">
                    <div class="span12">

                        <div>
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <!-- END PAGE HEADER-->
                <!-- BEGIN PAGE CONTENT-->
                <!-- END PAGE CONTENT-->
            </div>
            <!-- END PAGE CONTAINER-->
        </div>
        <!-- END PAGE -->
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN FOOTER -->
    <div id="footer">
        &copy; @System.DateTime.Now.Year Powered  by <a href="https://www.neemkunibd.com/">Neemkuni Tech.</a>
    </div>
    <!-- END FOOTER -->
    <!-- BEGIN JAVASCRIPTS -->
    <!-- Load javascripts at bottom, this will reduce page load time -->
    <script src="~/template/js/jquery-1.8.3.min.js"></script>
    <script src="~/template/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/template/assets/jquery-slimscroll/jquery-ui-1.9.2.custom.min.js"></script>
    <script type="text/javascript" src="~/template/assets/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/template/assets/fullcalendar/fullcalendar/fullcalendar.min.js"></script>
    <script src="~/template/assets/bootstrap/js/bootstrap.min.js"></script>

    <!-- ie8 fixes -->
    <!--[if lt IE 9]>
    <script src="js/excanvas.js"></script>
    <script src="js/respond.js"></script>
    <![endif]-->

    <script src="~/template/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js" type="text/javascript"></script>
    <script src="~/template/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="~/template/assets/chart-master/Chart.js"></script>
    <script src="~/template/js/jquery.scrollTo.min.js"></script>


    <!--common script for all pages-->
    <script src="~/template/js/common-scripts.js"></script>

    <!--script for this page only-->

    <script src="~/template/js/easy-pie-chart.js"></script>
    <script src="~/template/js/sparkline-chart.js"></script>
    <script src="~/template/js/home-page-calender.js"></script>
   
    @*<script src="~/template/js/home-chartjs.js"></script>*@

    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>